<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <!-- App Name (TextView) -->


        <LinearLayout
            android:id="@+id/linearLayout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                app:srcCompat="@drawable/ic_seedling_solid" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@+font/montserrat_font"
                android:text="@string/app_name"
                android:textFontWeight="1000"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@+font/montserrat_font"
            android:text="By LingkodTech"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="103dp"
            android:layout_height="104dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/ic_seedling_line" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@+font/montserrat_font"
            android:text="Good Morning!"
            android:textAlignment="center"
            android:textFontWeight="1000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <ImageView
                android:id="@+id/dot_status"
                android:layout_width="12sp"
                android:layout_height="12sp"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/ic_dot_red" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@+font/montserrat_font"
                android:text="Offline"
                android:textColor="#c00"
                android:textFontWeight="700"
                android:textSize="12sp" />


        </LinearLayout>


        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/bg_card_outer"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="@color/bg_card_inner"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">

                        <TableLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:stretchColumns="*">

                            <TableRow>

                                <TextView
                                    android:id="@+id/temp_val"
                                    android:fontFamily="@font/digital"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000" />

                                <TextView
                                    android:id="@+id/ph_val"
                                    android:fontFamily="@font/digital"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000" />

                                <TextView
                                    android:id="@+id/ppm_val"
                                    android:fontFamily="@font/digital"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000" />


                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:fontFamily="@font/digital"
                                    android:text="H20"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:fontFamily="@font/digital"
                                    android:text="pH"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:fontFamily="@font/digital"
                                    android:text="ppm"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />


                            </TableRow>


                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@color/bg_card_inner"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">

                        <TableLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:stretchColumns="*">

                            <TableRow>

                                <TextView
                                    android:id="@+id/lux_val"
                                    android:fontFamily="@font/digital"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000" />

                                <TextView
                                    android:id="@+id/humid_val"
                                    android:fontFamily="@font/digital"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000" />

                                <TextView
                                    android:id="@+id/air_val"
                                    android:fontFamily="@font/digital"
                                    android:text="-"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000" />


                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:fontFamily="@font/digital"
                                    android:text="Lux"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:fontFamily="@font/digital"
                                    android:text="%"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />

                                <TextView
                                    android:fontFamily="@font/digital"
                                    android:text="air"
                                    android:textAlignment="center"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp"
                                    android:textStyle="italic" />


                            </TableRow>


                        </TableLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <ImageView
                            android:layout_width="12sp"
                            android:layout_height="12sp"
                            android:layout_marginEnd="5dp"
                            app:srcCompat="@drawable/ic_bolt_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@+font/montserrat_font"
                            android:text="Realtime Sensors"
                            android:textColor="#059669"
                            android:textFontWeight="700"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/bg_card_outer"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:stretchColumns="*">


                        <TableRow>

                            <FrameLayout
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ProgressBar
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progress_vertical_green" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_up" />
                            </FrameLayout>


                            <FrameLayout
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ProgressBar
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progress_vertical_green" />


                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_down" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ProgressBar
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progress_vertical_green" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat_font"
                                    android:text="A"
                                    android:textColor="@color/white"
                                    android:textFontWeight="1000"
                                    android:textSize="24dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ProgressBar
                                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:progress="50"
                                    android:progressDrawable="@drawable/progress_vertical_green" />


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat_font"
                                    android:text="B"
                                    android:textColor="@color/white"
                                    android:textFontWeight="1000"
                                    android:textSize="24dp" />
                            </FrameLayout>

                        </TableRow>


                        <TableRow>

                            <TextView

                                android:layout_weight="1"
                                android:fontFamily="@font/digital"
                                android:padding="8dp"
                                android:text="50%"
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <TextView

                                android:layout_weight="1"
                                android:fontFamily="@font/digital"
                                android:padding="8dp"
                                android:text="100%"
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <TextView

                                android:layout_weight="1"
                                android:fontFamily="@font/digital"
                                android:padding="8dp"
                                android:text="50%"
                                android:textAlignment="center"
                                android:textSize="24sp" />

                            <TextView

                                android:layout_weight="1"
                                android:fontFamily="@font/digital"
                                android:padding="8dp"
                                android:text="50%"
                                android:textAlignment="center"
                                android:textSize="24sp" />
                        </TableRow>
                    </TableLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="12sp"
                            android:layout_height="12sp"
                            android:layout_marginEnd="5dp"
                            app:srcCompat="@drawable/ic_drop_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@+font/montserrat_font"
                            android:text="Liquid Tank Level"
                            android:textColor="#059669"
                            android:textFontWeight="700"
                            android:textSize="12sp" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame2">

            <TableRow>

            </TableRow>

            <TableRow>

            </TableRow>

        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>