<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TableLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/backbutton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00ffffff"
                        android:src="@drawable/back_selector" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="10dp"
                            app:srcCompat="@drawable/ic_seedling_solid" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@+font/montserrat_font"
                            android:text="@string/app_name"
                            android:textFontWeight="1000"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@+font/montserrat_font"
                        android:text="By LingkodTech"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/settingbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:src="@drawable/setting_select" />
            </TableRow>
        </TableLayout>


        <FrameLayout
            android:id="@+id/frame3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/bg_card_outer"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="5dp"
                            app:srcCompat="@drawable/outline_format_list_bulleted_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@+font/montserrat_font"
                            android:text="Presets"
                            android:textFontWeight="700"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:stretchColumns="0">

                        <TableRow>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                app:cardBackgroundColor="@color/bg_card_inner"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="5dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <ImageButton
                                        android:id="@+id/leftbtn"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:backgroundTint="#00000000"
                                        android:src="@drawable/baseline_chevron_left_24"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingVertical="20dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toStartOf="@id/rightbtn"
                                        app:layout_constraintStart_toEndOf="@+id/leftbtn"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/montserrat_font"
                                            android:text="Spinach"
                                            android:textAlignment="center"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/digital"
                                            android:text="6 - 7"
                                            android:textAlignment="center"
                                            android:textSize="16sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/digital"
                                            android:text="600 - 750 PPM"
                                            android:textAlignment="center"
                                            android:textSize="16sp" />

                                    </LinearLayout>

                                    <ImageButton
                                        android:id="@+id/rightbtn"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:backgroundTint="#00000000"
                                        android:src="@drawable/baseline_chevron_right_24"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Button
                                    android:id="@+id/presetsetbtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"

                                    android:layout_marginEnd="20dp"
                                    android:backgroundTint="@color/bg_card_inner"
                                    android:text="Set"
                                    android:textColor="@color/textwhite"
                                    app:layout_constraintEnd_toEndOf="parent
"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/newpresetbtn"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"

                                    android:layout_marginEnd="20dp"
                                    android:backgroundTint="@color/bg_card_inner"
                                    android:text="Manage"
                                    android:textColor="@color/textwhite"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent
"
                                    app:layout_constraintStart_toStartOf="parent" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </TableRow>

                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <TableLayout
            android:id="@+id/sliders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frame3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        app:cardBackgroundColor="@color/bg_card_outer"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="12dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="5dp"
                                    app:srcCompat="@drawable/sharp_syringe_24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@+font/montserrat_font"
                                    android:text="ph Range"
                                    android:textFontWeight="700"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:stretchColumns="*">

                                <TableRow>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@+font/montserrat_font"
                                        android:text="Min"
                                        android:textAlignment="center"
                                        android:textColor="@color/themegreen"
                                        android:textFontWeight="700"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@+font/montserrat_font"
                                        android:text="Max"
                                        android:textAlignment="center"
                                        android:textColor="@color/themegreen"
                                        android:textFontWeight="700"
                                        android:textSize="12sp" />
                                </TableRow>

                                <TableRow>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <SeekBar
                                            android:id="@+id/verta"
                                            android:layout_width="200dp"
                                            android:layout_height="match_parent"
                                            android:max="100"
                                            android:progress="50"
                                            android:rotation="270" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <SeekBar
                                            android:id="@+id/vertb"
                                            android:layout_width="200dp"
                                            android:layout_height="match_parent"
                                            android:max="100"
                                            android:progress="50"
                                            android:rotation="270" />
                                    </LinearLayout>
                                </TableRow>

                                <TableRow>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_marginVertical="10dp"
                                        app:cardBackgroundColor="@color/bg_card_inner"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="5dp">

                                        <TextView
                                            android:id="@+id/phMinValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="10dp"
                                            android:fontFamily="@font/digital"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textFontWeight="1000"
                                            android:textSize="24sp" />
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_marginVertical="10dp"
                                        app:cardBackgroundColor="@color/bg_card_inner"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="5dp">

                                        <TextView
                                            android:id="@+id/phMaxValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="10dp"
                                            android:fontFamily="@font/digital"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textFontWeight="1000"
                                            android:textSize="24sp" />
                                    </androidx.cardview.widget.CardView>

                                </TableRow>

                            </TableLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        app:cardBackgroundColor="@color/bg_card_outer"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="12dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="5dp"
                                    app:srcCompat="@drawable/sharp_syringe_24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@+font/montserrat_font"
                                    android:text="PPM Range"
                                    android:textFontWeight="700"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:stretchColumns="*">

                                <TableRow>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@+font/montserrat_font"
                                        android:text="Min"
                                        android:textAlignment="center"
                                        android:textColor="@color/themegreen"
                                        android:textFontWeight="700"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@+font/montserrat_font"
                                        android:text="Max"
                                        android:textAlignment="center"
                                        android:textColor="@color/themegreen"
                                        android:textFontWeight="700"
                                        android:textSize="12sp" />
                                </TableRow>

                                <TableRow>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <SeekBar
                                            android:id="@+id/vertc"
                                            android:layout_width="200dp"
                                            android:layout_height="match_parent"
                                            android:max="100"
                                            android:progress="50"
                                            android:rotation="270" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:gravity="center">

                                        <SeekBar
                                            android:id="@+id/vertd"
                                            android:layout_width="200dp"
                                            android:layout_height="match_parent"
                                            android:max="100"
                                            android:progress="50"
                                            android:rotation="270" />
                                    </LinearLayout>
                                </TableRow>

                                <TableRow>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_marginVertical="10dp"
                                        app:cardBackgroundColor="@color/bg_card_inner"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="5dp">

                                        <TextView
                                            android:id="@+id/tdsMinValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="10dp"
                                            android:fontFamily="@font/digital"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textFontWeight="1000"
                                            android:textSize="24sp" />
                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_marginVertical="10dp"
                                        app:cardBackgroundColor="@color/bg_card_inner"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="5dp">

                                        <TextView
                                            android:id="@+id/tdsMaxValue"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginVertical="10dp"
                                            android:fontFamily="@font/digital"
                                            android:text="0"
                                            android:textAlignment="center"
                                            android:textFontWeight="1000"
                                            android:textSize="24sp" />
                                    </androidx.cardview.widget.CardView>

                                </TableRow>

                            </TableLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/bg_card_inner"
            android:textColor="@color/textwhite"
            android:text="Save Settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sliders" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>